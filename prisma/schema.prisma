// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id          String    @id @default(cuid())
  studentMeta String
  name        String
  year        Int

  degreeBE     DegreeBE?
  degreeMSC    DegreeMSC?
  degreeHigher DegreeHigher?

  cgpa   Float?
  hostel String?

  cgpaUpdated Boolean @default(false)
  cgpaSemester String @default("")
}

enum DegreeBE {
  A1
  A3
  A4
  A7
  A8
  AA
}

enum DegreeMSC {
  B1
  B2
  B3
  B4
  B5
}

enum DegreeHigher {
  PHD
  H106
  H103
  H140
  H129
  H152
  H123
  H141
  H151
  H101
  H124
}
